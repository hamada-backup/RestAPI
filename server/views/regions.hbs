<div class="container">
    <div class="row">


        <div class="col">
            <h2>Region Form</h2>
            <form action="/admin/regions/regions" method="POST">
                <div class="form-group row">
                    <label for="id" class="col-sm-2 col-form-label">Region Id</label>
                    <div class="col-sm-10">
                        <input name="id" type="text" class="form-control" value="{{elementR.id}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="region" class="col-sm-2 col-form-label">Region Name</label>
                    <div class="col-sm-10">
                        <input name="region" type="text" class="form-control" value="{{elementR.region}}">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col">
            <h2>Territories Form</h2>
            <form action="/admin/regions" method="POST" id="Form">
                <div class="form-group row">
                    <label for="id" class="col-sm-2 col-form-label">Territories Id</label>
                    <div class="col-sm-10">
                        <input name="id" type="text" class="form-control" {{elementT.id}}>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="zona" class="col-sm-2 col-form-label">Territories Zona</label>
                    <div class="col-sm-10">
                        <input name="zona" type="text" class="form-control" {{elementT.zona}}>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="fk_region" class="col-sm-2 col-form-label">Territories-Region</label>
                    <div class="col-sm-10">
                        <input name="fk_region" type="text" class="form-control" {{elementT.fk_region}}>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="w-100"></div>
        <div class="col">
            <h2>Regions Of JS.io</h2>
            <h3>Regions Table</h3>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Region Id</th>
                        <th scope="col">Region Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each regionsArr as |elementRegion|}}
                    <tr>
                        <th scope="row">{{elementRegion.id}}#</th>
                        <td>{{elementRegion.id}}</td>
                        <td>{{elementRegion.region}}</td>
                        <td><a href="/admin/regions/regions/{{elementRegion.id}}">{{elementRegion.fk_region}}</a></td>
                        <td><a href="/admin/regions/regions/see/{{elementRegion.id}}"
                                class="btn btn-sm btn-primary">See</a>
                        </td>
                        <td><a href="/admin/regions/regions/edit/{{elementRegion.id}}"
                                class="btn btn-sm btn-primary">Edit</a></td>
                        <td><a href="/admin/regions/delete/regions/{{elementRegion.id}}" class="btn btn-sm btn-danger"
                                onclick="return confirm('¿are you ?')">Delete</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
        <div class="col">
            <h2>Territories Of JS.io</h2>
            <h3>Territories Table</h3>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Territories Id</th>
                        <th scope="col">Territories Zona</th>
                        <th scope="col">Territories Region</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each territoriesArr as |elementTerritories|}}
                    <tr>
                        <th scope="row">{{elementTerritories.id}}#</th>
                        <td>{{elementTerritories.id}}</td>
                        <td>{{elementTerritories.zona}}</td>
                        <td><a
                                href="/admin/regions/regions/{{elementTerritories.id}}">{{elementTerritories.fk_region}}</a>
                        </td>
                        <td><a href="/admin/regions/territories/see/{{elementTerritories.id}}"
                                class="btn btn-sm btn-primary">See</a></td>
                        <td><a href="/admin/regions/territories/edit/{{elementTerritories.id}}"
                                class="btn btn-sm btn-primary">Edit</a>
                        </td>
                        <td><a href="/admin/regions/delete/territories/{{elementTerritories.id}}"
                                class="btn btn-sm btn-danger" onclick="return confirm('¿are you ?')">Delete</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>