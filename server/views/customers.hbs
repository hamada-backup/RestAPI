<h2>Customers</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Customer Id</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Customer Address</th>
            <th scope="col">Customer Region Id</th>
            <th scope="col">detalles</th>
            <th scope="col">editar</th>
            <th scope="col">borrar</th>
        </tr>
    </thead>
    <tbody>
        {{#each arrCustomers as |cust|}}
        <tr>
            <th scope="row">info</th>
            <td>{{cust.id}}</td>
            <td>{{cust.nombre}}</td>
            <td>{{cust.address}}</td>
            <td>{{cust.fk_regio}}</td>
            <td><a href="/product/{{cust._id}}" class="btn btn-sm btn-primary">Ver</a></td>
            <td><a href="/product/edit/{{cust._id}}" class="btn btn-sm btn-primary">Editar</a></td>
            <td><a href="/product/delete/{{cust._id}}" class="btn btn-sm btn-danger"
                    onclick="return confirm('Â¿are you chore?')">Borrar</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>